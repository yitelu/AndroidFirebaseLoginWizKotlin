<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateSnapActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/createSnapImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Choose Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseImageButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/createSnapImageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="chooseImageClicked"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/messageEditText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseImageButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Message"/>
    <Button
            android:text="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/messageEditText"
            android:onClick="nextClicked"/>
</android.support.constraint.ConstraintLayout>